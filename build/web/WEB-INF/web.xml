<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>com.senai.alertar.controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AlertaController</servlet-name>
        <servlet-class>com.senai.alertar.controller.AlertaController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MensagemController</servlet-name>
        <servlet-class>com.senai.alertar.controller.MensagemController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>jspAlerta</servlet-name>
        <jsp-file>alerta.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>jspAlerta</servlet-name>
        <url-pattern>/alerta</url-pattern>
    </servlet-mapping>
        <servlet>
        <servlet-name>jspListaAtivo</servlet-name>
        <jsp-file>listaAlertaAtivo.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>jspListaAtivo</servlet-name>
        <url-pattern>/alertas_ativos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AlertaController</servlet-name>
        <url-pattern>/AlertaController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MensagemController</servlet-name>
        <url-pattern>/Mensagem</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
